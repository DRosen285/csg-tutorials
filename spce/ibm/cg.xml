<cg>
  <!-- temporary variable for fmatch, will be 
       determined automaticaly later -->
  <nframes>1000</nframes>
  <cgmap>../water_cg.xml</cgmap>
  <!-- example for a non-bonded interaction entry -->
  <non-bonded>
    <!-- name of the interaction -->
    <name>CG-CG</name>
    <!-- target distribution (rdf), just give gromas rdf.xvg -->
    <target>rdf_CG_CG_aim.xvg</target>
    <!-- types involved in this interaction -->
    <type1>CG</type1>
    <type2>CG</type2>
    <!-- dimension + grid spacing of tables for calculations -->
    <min>0</min>
    <max>0.9</max>
    <step>0.01</step>
    <!-- update cycles -->
    <do_pressure>0</do_pressure>
    <do_potential>1</do_potential>
    <!-- additional post processing of dU before added to potential -->
    <post_update></post_update>
    <!-- some options for the post update scripts -->
    <post_update_options>
        <splinesmooth>
            <step>0.02</step>
        </splinesmooth>
        <smooth>
          <iterations>2</iterations>
        </smooth>
    </post_update_options>
    <!-- additional post processing of U after dU added to potential -->
    <post_add></post_add>
    <!-- inverse monte carlo specific stuff -->
    <imc>
      <group>CG-CG</group>
    </imc>
    <!-- name of the table for gromacs run -->
    <gromacs>
      <table>table_CG_CG.xvg</table>
    </gromacs>
  </non-bonded>
  
  <!-- general options for inverse script -->
  <inverse>
    <!-- target pressure -->
    <p_target>1.0</p_target>
    <!-- 300*0.00831451 gromacs units -->
    <kBT>2.49435</kBT>
    <!-- use gromacs as simulation program -->
    <program>gromacs</program>
    <!-- gromacs specific options -->
    <gromacs>
      <!-- trash so many frames at the beginning -->
      <equi_time>20%</equi_time>
      <!-- grid for table*.xvg !-->
      <table_bins>0.002</table_bins>
      <!-- cut the potential at this value (gromacs bug) -->
      <pot_max>1000000</pot_max>
      <!-- extend the tables to this value -->
      <table_end>2.0</table_end>
      <!-- topology + trajectory. Be careful, do not change yet! -->
      <topol>topol.tpr</topol>
      <traj>traj.xtc</traj>
    </gromacs>
    <!-- these files are copied for each new run -->
    <filelist>grompp.mdp topol.top table.xvg index.ndx</filelist>
    <!-- do so many iterations -->
    <iterations_max>300</iterations_max>
    <!-- ibm: inverse biltzmann imc: inverse monte carlo -->
    <method>ibm</method>
    <!-- directory for user scripts -->
    <scriptdir>$PWD</scriptdir>
    <!-- write log to this file -->
    <log_file>inverse.log</log_file>
    <!-- write restart step to this file -->
    <restart_file>restart_points.log</restart_file>
    <!-- imc specific stuff -->
    <imc>
      <!-- solver to solve linear equation system, can be octave or matlab -->
      <solver>octave</solver>
    </imc>
  </inverse>
</cg>
